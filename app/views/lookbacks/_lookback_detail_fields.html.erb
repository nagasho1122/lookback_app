<div class="nested-fields">
    <%= f.label :subject, "科目（必須）" %>
    <%= f.text_field :subject, class: 'form-control' %>
    <%= f.label :number, "大問（必須）" %>
    <%= f.text_field :number, class: 'form-control' %>
    <%= f.label :text, "振り返り（必須）" %>
    <%= f.text_field :text, class: 'form-control' %>
    <%= f.hidden_field :lookback_id, :value => @lookback.id  %>
    
    <%= link_to_remove_association "削除", f %>
    
    <%= f.fields_for :reviews do |u| %>
      <%= render "lookbacks/review_fields", f: u %>
    <% end %>

  
    <%= link_to_add_association "追加", f, :reviews %>
</div>